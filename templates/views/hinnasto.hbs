{{>header}}

<main role="main" class="inner cover">
  <h2 class="hinnasto" id="click" >Klassinen hieronta</h2>
  <p id="demo"></p>
  <script>
    document.getElementById("click").addEventListener("click", moreInfo);
    function moreInfo(){
      var x = document.getElementById("demo")
      if (x.innerHTML === "") {
        x.innerHTML = "30min 35€</br>"
                      +"45min 40€</br>"
                      +"60min 50€</br>"
                      +"75min 60€</br>"
                      +"90min 65€</br>"
      } else {
        x.innerHTML = "";
      }
    }
  </script>
  <hr>

